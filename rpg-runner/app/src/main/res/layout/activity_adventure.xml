<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".AdventureActivity">

    <fragment
        android:id="@+id/map_view"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/fab_margin"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="?attr/homeAsUpIndicator"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="24dp"
        app:tint="@android:color/white" />

    <androidx.cardview.widget.CardView
        android:id="@+id/info_card"
        android:layout_width="220dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="12dp"
        android:minHeight="56dp"
        app:cardBackgroundColor="@android:color/background_light"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingStart="@dimen/medium_gap"
            android:paddingTop="@dimen/small_gap"
            android:paddingEnd="@dimen/medium_gap"
            android:paddingBottom="@dimen/small_gap">

            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_name"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_level"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/player_name" />

            <TextView
                android:id="@+id/exp_info"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:elevation="@dimen/text_elevation"
                android:fontFamily="serif-monospace"
                android:text="@string/default_exp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/exp_bar"
                app:layout_constraintLeft_toLeftOf="@id/exp_bar"
                app:layout_constraintRight_toRightOf="@id/exp_bar"
                app:layout_constraintTop_toTopOf="@id/exp_bar" />

            <ProgressBar
                android:id="@+id/exp_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="99"
                android:progressTint="@color/colorExperience"
                android:scaleY="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="27dp"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/char_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="1dp"
                        android:src="@drawable/run"
                        android:text="@string/mission"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/hp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:elevation="@dimen/text_elevation"
                android:fontFamily="serif-monospace"
                android:text="@string/health"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/hp_bar"
                app:layout_constraintTop_toTopOf="@id/hp_bar" />

            <TextView
                android:id="@+id/hp_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_gap"
                android:elevation="@dimen/text_elevation"
                android:fontFamily="serif-monospace"
                android:text="@string/default_health"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="@id/hp_bar"
                app:layout_constraintTop_toTopOf="@id/hp_bar" />

            <ProgressBar
                android:id="@+id/hp_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="10"
                android:progress="10"
                android:progressTint="@color/colorHealth"
                android:scaleY="4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_gap"
                android:elevation="@dimen/text_elevation"
                android:fontFamily="serif-monospace"
                android:text="@string/magic"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/mp_bar"
                app:layout_constraintTop_toTopOf="@id/mp_bar" />

            <TextView
                android:id="@+id/mp_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_gap"
                android:elevation="@dimen/text_elevation"
                android:fontFamily="serif-monospace"
                android:text="@string/default_magic"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="@id/mp_bar"
                app:layout_constraintTop_toTopOf="@id/mp_bar" />

            <ProgressBar
                android:id="@+id/mp_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:max="5"
                android:progress="5"
                android:progressTint="@color/colorMagic"
                android:scaleY="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/items_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="16dp"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/fab_menu"
        app:layout_constraintEnd_toEndOf="@+id/fab_menu">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/run_submenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:tint="@android:color/white"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/run" />

        <TextView
            android:id="@+id/run_submenu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_text"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:paddingStart="12dp"
            android:paddingEnd="44dp"
            android:text="@string/mission"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/run_submenu"
            app:layout_constraintEnd_toEndOf="@+id/run_submenu"
            app:layout_constraintTop_toTopOf="@+id/run_submenu" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/option_submenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:tint="@android:color/white"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/run_submenu"
            app:srcCompat="@android:drawable/ic_menu_preferences" />

        <TextView
            android:id="@+id/option_submenu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_text"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:paddingStart="12dp"
            android:paddingEnd="44dp"
            android:text="@string/option"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/option_submenu"
            app:layout_constraintEnd_toEndOf="@id/option_submenu"
            app:layout_constraintTop_toTopOf="@id/option_submenu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/menu_icon"
        app:tint="@android:color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>