<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/menu_gap">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/adventure_button"
        android:text="@string/adventure"
        style="@style/style_menu_button"
        app:layout_constraintBottom_toTopOf="@id/mission_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/mission_button"
        android:text="@string/mission"
        style="@style/style_menu_button"
        app:layout_constraintBottom_toTopOf="@id/character_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/character_button"
        android:text="@string/character"
        style="@style/style_menu_button"
        app:layout_constraintBottom_toTopOf="@id/split_menu_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/split_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.button.MaterialButton
            android:text="@string/option"
            style="@style/style_menu_button"
            android:layout_marginRight="@dimen/menu_gap"
            android:layout_weight="1"
            android:layout_width="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:text="@string/help"
            style="@style/style_menu_button"
            android:layout_weight="1"
            android:layout_width="wrap_content"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>